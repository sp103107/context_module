{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aos.local/schemas/mcr.v2.1.schema.json",
  "title": "MemoryChangeRequestV2_1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "_schema_version",
    "op",
    "type",
    "scope",
    "content",
    "confidence",
    "rationale",
    "source_refs"
  ],
  "properties": {
    "_schema_version": {"type": "string", "const": "2.1"},
    "op": {"type": "string", "enum": ["add", "supersede", "deprecate", "noop"]},
    "type": {"type": "string", "enum": ["fact", "preference", "policy", "decision", "invariant"]},
    "scope": {"type": "string", "enum": ["user", "project", "global"]},
    "content": {"type": "string", "minLength": 1},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "rationale": {"type": "string", "minLength": 1},
    "source_refs": {
      "type": "array",
      "items": {"type": "string", "minLength": 1},
      "default": []
    },
    "supersedes": {
      "type": "array",
      "items": {"type": "string", "minLength": 1},
      "default": []
    },
    "target_memory_id": {"type": "string", "minLength": 1},
    "memory_id": {"type": "string", "minLength": 1},
    "user_id": {"type": "string", "minLength": 1},
    "project_id": {"type": "string", "minLength": 1},
    "created_at": {"type": "string", "format": "date-time"},
    "updated_at": {"type": "string", "format": "date-time"}
  },
  "allOf": [
    {
      "if": {"properties": {"op": {"const": "supersede"}}},
      "then": {"required": ["supersedes"], "properties": {"supersedes": {"minItems": 1}}}
    },
    {
      "if": {"properties": {"op": {"const": "deprecate"}}},
      "then": {"required": ["target_memory_id"]}
    }
  ]
}
