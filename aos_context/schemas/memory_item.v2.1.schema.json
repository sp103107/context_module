{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aos.local/schemas/memory_item.v2.1.schema.json",
  "title": "MemoryItemV2_1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "_schema_version",
    "memory_id",
    "type",
    "scope",
    "content",
    "confidence",
    "status",
    "source_refs",
    "created_at",
    "updated_at"
  ],
  "properties": {
    "_schema_version": {"type": "string", "const": "2.1"},
    "memory_id": {"type": "string", "minLength": 3},
    "type": {"type": "string", "enum": ["fact","preference","policy","decision","invariant"]},
    "scope": {"type": "string", "enum": ["user","project","global"]},
    "user_id": {"type": ["string","null"]},
    "project_id": {"type": ["string","null"]},
    "content": {"type": "string", "minLength": 1},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "status": {"type": "string", "enum": ["active","deprecated","inactive"]},
    "supersedes": {"type": "array", "items": {"type": "string"}, "default": []},
    "source_refs": {"type": "array", "items": {"type": "string"}},
    "created_at": {"type": "string", "format": "date-time"},
    "updated_at": {"type": "string", "format": "date-time"}
  }
}
